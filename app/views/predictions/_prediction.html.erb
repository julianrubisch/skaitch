<% cache prediction do %>
  <div id="<%= dom_id(prediction) %>">
    <%= turbo_stream_from prediction %>

    <% if prediction.prediction_image.present? %>
      <%= image_tag prediction.data_url %>
    <% else %>
      <sl-spinner style="font-size: 8rem;"></sl-spinner>
    <% end %>
  </div>
<% end %>
